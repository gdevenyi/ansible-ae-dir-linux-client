# {{ ansible_managed }}
#
# LDAP Defaults
#
# See ldap.conf(5) and sudoers.ldap(5) for details

base ou=ae-dir
sudoers_base ou=ae-dir
uri {{ ldap_uris|join(' ') }} {{ ldap_backup_uris|join(' ') }}

sizelimit 50
timelimit 15
deref never

# TLS certificates
tls_cacert {{ ldap_cacert_pathname }}

binddn host={{ inventory_hostname }},ou=ae-dir
bindpw {{ ldap_host_password }}

# Handy for debugging but set to 0 in production!
sudoers_debug 0
